@model AppliedProg2.Models.DonationViewModel
@{
    ViewData["Title"] = "Make Donation";
}

<style>
    :root {
        --primary-black: #0a0a0a;
        --dark-gray: #1a1a1a;
        --light-gray: #2a2a2a;
        --accent-purple: #a78bfa;
        --light-purple: #c4b5fd;
        --bright-purple: #8b5cf6;
        --white: #ffffff;
        --off-white: #f5f5f5;
        --text-gray: #d1d5db;
        --success-green: #10b981;
        --warning-orange: #f59e0b;
        --error-red: #ef4444;
        --info-blue: #3b82f6;
    }

    .donation-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: radial-gradient(circle at 20% 80%, rgba(167, 139, 250, 0.15) 0%, transparent 50%), radial-gradient(circle at 80% 20%, rgba(167, 139, 250, 0.1) 0%, transparent 50%), url('https://images.unsplash.com/photo-1690321607729-bce901c77324?q=80&w=387&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D');
        background-size: cover;
        background-position: center;
        background-blend-mode: overlay;
        padding: 20px 0;
        color: var(--white);
    }

    .donation-card {
        border: 1px solid var(--light-gray);
        border-radius: 12px;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.3);
        overflow: hidden;
        transition: all 0.3s ease;
        background: var(--dark-gray);
        border-left: 5px solid var(--accent-purple);
    }

        .donation-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
        }

    .card-header {
        background: var(--light-gray);
        color: var(--white);
        padding: 2rem;
        text-align: center;
        border-bottom: none;
        position: relative;
        overflow: hidden;
        border-bottom: 2px solid var(--accent-purple);
    }

        .card-header h4 {
            position: relative;
            z-index: 1;
            font-weight: 700;
            margin: 0;
            font-size: 1.8rem;
        }

            .card-header h4::after {
                content: '';
                display: block;
                width: 50px;
                height: 3px;
                background: var(--accent-purple);
                margin: 10px auto 0;
                border-radius: 2px;
            }

    .card-body {
        padding: 2.5rem;
        background: var(--dark-gray);
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-label {
        font-weight: 600;
        color: var(--off-white);
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
    }

        .form-label.required::after {
            content: ' *';
            color: var(--error-red);
        }

    .form-control, .form-select {
        border: 2px solid var(--light-gray);
        border-radius: 8px;
        padding: 12px 16px;
        font-size: 1rem;
        transition: all 0.3s ease;
        background: var(--primary-black);
        color: var(--white);
    }

        .form-control:focus, .form-select:focus {
            border-color: var(--accent-purple);
            box-shadow: 0 0 0 2px rgba(167, 139, 250, 0.2);
            background: var(--primary-black);
            outline: none;
        }

        .form-control::placeholder {
            color: var(--text-gray);
        }

    textarea.form-control {
        resize: vertical;
        min-height: 100px;
    }

    .form-select {
        appearance: none;
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%23a78bfa' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='m6 8 4 4 4-4'/%3e%3c/svg%3e");
        background-position: right 0.75rem center;
        background-repeat: no-repeat;
        background-size: 16px 12px;
    }

    .btn-submit {
        background: linear-gradient(135deg, var(--accent-purple), var(--light-purple));
        border: none;
        border-radius: 8px;
        padding: 14px 30px;
        font-weight: 700;
        font-size: 1.1rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(167, 139, 250, 0.3);
        color: var(--primary-black);
    }

        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(167, 139, 250, 0.4);
            background: linear-gradient(135deg, var(--light-purple), var(--accent-purple));
        }

    .btn-cancel {
        background: var(--light-gray);
        border: 1px solid var(--text-gray);
        border-radius: 8px;
        padding: 14px 30px;
        font-weight: 600;
        font-size: 1.1rem;
        transition: all 0.3s ease;
        color: var(--white);
    }

        .btn-cancel:hover {
            transform: translateY(-2px);
            background: var(--text-gray);
            border-color: var(--accent-purple);
        }

        .btn-submit i, .btn-cancel i {
            margin-right: 8px;
        }

    .text-danger {
        color: var(--error-red) !important;
        font-size: 0.9rem;
        margin-top: 5px;
        display: flex;
        align-items: center;
    }

    .alert-success {
        background: rgba(16, 185, 129, 0.1);
        border: 1px solid var(--success-green);
        border-radius: 8px;
        color: var(--success-green);
        font-weight: 600;
        padding: 1rem 1.5rem;
        margin-bottom: 1.5rem;
    }

    .alert-info {
        background: rgba(59, 130, 246, 0.1);
        border: 1px solid var(--info-blue);
        border-radius: 8px;
        color: var(--info-blue);
        font-weight: 600;
        padding: 1.5rem;
        margin: 2rem 0;
        border-left: 5px solid var(--accent-purple);
    }

    .alert-danger {
        background: rgba(239, 68, 68, 0.1);
        border: 1px solid var(--error-red);
        border-radius: 8px;
        color: var(--error-red);
        font-weight: 600;
        padding: 1rem 1.5rem;
        margin-bottom: 1.5rem;
    }

    .donation-decoration {
        text-align: center;
        margin-bottom: 2rem;
        padding: 1.5rem;
        background: rgba(167, 139, 250, 0.1);
        border-radius: 8px;
        border: 1px dashed var(--accent-purple);
    }

    .decoration-icons {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-bottom: 1rem;
    }

    .icon-circle {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background: var(--light-gray);
        display: flex;
        align-items: center;
        justify-content: center;
        border: 2px solid var(--accent-purple);
    }

        .icon-circle i {
            color: var(--accent-purple);
            font-size: 1.5rem;
        }

    .impact-meter {
        background: var(--light-gray);
        border-radius: 8px;
        padding: 1.5rem;
        margin: 1.5rem 0;
        text-align: center;
        border-left: 4px solid var(--accent-purple);
    }

    .impact-stats {
        display: flex;
        justify-content: space-around;
        margin-top: 1rem;
    }

    .impact-stat {
        text-align: center;
    }

    .stat-number {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--accent-purple);
        display: block;
    }

    .stat-label {
        font-size: 0.8rem;
        color: var(--text-gray);
    }

    .form-hint {
        font-size: 0.8rem;
        color: var(--text-gray);
        margin-top: 3px;
        display: flex;
        align-items: center;
    }

        .form-hint i {
            margin-right: 5px;
            color: var(--accent-purple);
        }

    /* Responsive design */
    @@media (max-width: 768px) {
        .donation-container {
            padding: 10px;
        }

        .card-body {
            padding: 2rem 1.5rem;
        }

        .card-header {
            padding: 1.5rem;
        }

            .card-header h4 {
                font-size: 1.5rem;
            }

        .btn-group {
            flex-direction: column;
            gap: 10px;
        }

        .btn-submit, .btn-cancel {
            width: 100%;
        }

        .impact-stats {
            flex-direction: column;
            gap: 1rem;
        }

        .decoration-icons {
            gap: 15px;
        }

        .icon-circle {
            width: 50px;
            height: 50px;
        }

            .icon-circle i {
                font-size: 1.2rem;
            }
    }

    /* Loading state for button */
    .btn-submit.loading {
        position: relative;
        color: transparent;
    }

        .btn-submit.loading::after {
            content: '';
            position: absolute;
            width: 20px;
            height: 20px;
            top: 50%;
            left: 50%;
            margin-left: -10px;
            margin-top: -10px;
            border: 2px solid var(--primary-black);
            border-radius: 50%;
            border-top-color: transparent;
            animation: spin 1s ease-in-out infinite;
        }

    keyframes spin {
        to

    {
        transform: rotate(360deg);
    }

    }

    /* Celebration animation */
    keyframes celebrate {
        0%

    {
        transform: scale(1);
    }

    50% {
        transform: scale(1.05);
    }

    100% {
        transform: scale(1);
    }

    }

    .donation-card {
        animation: celebrate 2s ease-in-out;
    }

    /* Floating animation for icons */
    keyframes float {
        0%, 100%

    {
        transform: translateY(0px);
    }

    50% {
        transform: translateY(-5px);
    }

    }

    .icon-circle:nth-child(1) {
        animation: float 3s ease-in-out infinite;
    }

    .icon-circle:nth-child(2) {
        animation: float 3s ease-in-out infinite 0.5s;
    }

    .icon-circle:nth-child(3) {
        animation: float 3s ease-in-out infinite 1s;
    }

    .icon-circle:nth-child(4) {
        animation: float 3s ease-in-out infinite 1.5s;
    }
</style>

<div class="donation-container">
    <div class="row justify-content-center w-100">
        <div class="col-md-10 col-lg-8">
            <div class="donation-card">
                <div class="card-header">
                    <h4><i class="fas fa-donate"></i> Make a Life-Changing Donation</h4>
                </div>
                <div class="card-body">
                    <div class="donation-decoration">
                        <div class="decoration-icons">
                            <div class="icon-circle">
                                <i class="fas fa-handshake"></i>
                            </div>
                            <div class="icon-circle">
                                <i class="fas fa-heart"></i>
                            </div>
                            <div class="icon-circle">
                                <i class="fas fa-star"></i>
                            </div>
                            <div class="icon-circle">
                                <i class="fas fa-globe-americas"></i>
                            </div>
                        </div>
                        <p class="mb-0" style="color: var(--text-gray);"><strong style="color: var(--white);">Your generosity creates hope!</strong> Every donation helps rebuild lives and restore communities.</p>
                    </div>

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                        </div>
                    }

                    <form asp-action="Create" method="post" id="donationForm">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="All" class="alert alert-danger"></div>

                        <div class="impact-meter">
                            <h5 style="color: var(--white);"><i class="fas fa-seedling"></i> Your Impact Matters</h5>
                            <p class="mb-2" style="color: var(--text-gray);">Every contribution helps us provide essential support to those in need</p>
                            <div class="impact-stats">
                                <div class="impact-stat">
                                    <span class="stat-number">1,250+</span>
                                    <span class="stat-label">Families Helped</span>
                                </div>
                                <div class="impact-stat">
                                    <span class="stat-number">45+</span>
                                    <span class="stat-label">Communities</span>
                                </div>
                                <div class="impact-stat">
                                    <span class="stat-number">24/7</span>
                                    <span class="stat-label">Support</span>
                                </div>
                            </div>
                        </div>

                        <!-- Donation Type -->
                        <div class="form-group">
                            <label asp-for="DonationType" class="form-label required">Donation Type</label>
                            <select asp-for="DonationType" class="form-select" id="donationType">
                                <option value="">-- Select What You'd Like to Donate --</option>
                                <option value="Food">Food Supplies</option>
                                <option value="Clothing">Clothing</option>
                                <option value="Medical">Medical Supplies</option>
                                <option value="Money">Financial Donation</option>
                                <option value="Other">Other Essentials</option>
                            </select>
                            <span asp-validation-for="DonationType" class="text-danger"></span>
                            <div class="form-hint">
                                <i class="fas fa-info-circle"></i> Choose the type of support you'd like to provide
                            </div>
                        </div>

                        <!-- Item Description -->
                        <div class="form-group">
                            <label asp-for="ItemDescription" class="form-label required">Item Description</label>
                            <textarea asp-for="ItemDescription" class="form-control" rows="3"
                                      placeholder="Describe what you're donating in detail (e.g., '50 cans of vegetables and pasta', 'Winter coats and blankets', 'First aid kits and bandages')"></textarea>
                            <span asp-validation-for="ItemDescription" class="text-danger"></span>
                            <div class="form-hint">
                                <i class="fas fa-edit"></i> Be specific about items, conditions, and any special features
                            </div>
                        </div>

                        <div class="row">
                            <!-- Quantity -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Quantity" class="form-label required">Quantity</label>
                                    <input asp-for="Quantity" class="form-control" type="number" step="0.01" min="0.01" placeholder="e.g., 50, 100, 2.5" />
                                    <span asp-validation-for="Quantity" class="text-danger"></span>
                                </div>
                            </div>
                            <!-- Unit -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Unit" class="form-label required">Unit</label>
                                    <input asp-for="Unit" class="form-control" placeholder="kg, pieces, boxes, liters, etc." list="unitSuggestions" />
                                    <datalist id="unitSuggestions">
                                        <option value="kg" />
                                        <option value="pieces" />
                                        <option value="boxes" />
                                        <option value="liters" />
                                        <option value="bags" />
                                        <option value="sets" />
                                        <option value="pairs" />
                                    </datalist>
                                    <span asp-validation-for="Unit" class="text-danger"></span>
                                    <div class="form-hint">
                                        <i class="fas fa-ruler"></i> Specify the measurement unit for your donation
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Target Area -->
                        <div class="form-group">
                            <label asp-for="TargetArea" class="form-label">Preferred Target Area (Optional)</label>
                            <input asp-for="TargetArea" class="form-control" placeholder="Specific area or community you want to help (e.g., 'Flood victims in Riverside', 'Earthquake survivors in Mountain View')" list="areaSuggestions" />
                            <datalist id="areaSuggestions">
                                <option value="Flood affected areas" />
                                <option value="Earthquake zones" />
                                <option value="Fire recovery communities" />
                                <option value="General relief fund" />
                                <option value="Children and families" />
                                <option value="Elderly support" />
                            </datalist>
                            <span asp-validation-for="TargetArea" class="text-danger"></span>
                            <div class="form-hint">
                                <i class="fas fa-map-marker-alt"></i> If you have a specific community in mind, let us know
                            </div>
                        </div>

                        <!-- Special Instructions -->
                        <div class="form-group">
                            <label asp-for="SpecialInstructions" class="form-label">Special Instructions</label>
                            <textarea asp-for="SpecialInstructions" class="form-control" rows="2"
                                      placeholder="Any special delivery instructions, storage requirements, or additional notes about your donation..."></textarea>
                            <span asp-validation-for="SpecialInstructions" class="text-danger"></span>
                            <div class="form-hint">
                                <i class="fas fa-clipboard-list"></i> e.g., 'Needs refrigeration', 'Fragile items', 'Available for pickup on weekends'
                            </div>
                        </div>

                        <!-- Info Note -->
                        <div class="alert alert-info">
                            <i class="fas fa-heart"></i>
                            <strong>Thank you for your incredible generosity!</strong>
                            Your donation will be directly distributed to communities in need and help provide essential support during difficult times.
                            <br><small class="mt-1 d-block" style="color: var(--text-gray);">Every contribution makes a difference in someone's life</small>
                        </div>

                        <!-- Buttons -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end btn-group">
                            <a asp-action="Index" class="btn btn-cancel">
                                <i class="fas fa-arrow-left"></i> Back to Safety
                            </a>
                            <button type="submit" class="btn btn-submit" id="submitButton">
                                <i class="fas fa-paper-plane"></i> Submit Generous Donation
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Add loading state to button on form submit
        document.getElementById('donationForm').addEventListener('submit', function () {
            const button = document.getElementById('submitButton');
            button.classList.add('loading');
            button.disabled = true;
            button.innerHTML = '<i class="fas fa-paper-plane"></i> Processing Your Generous Donation...';
        });

        // Dynamic placeholder based on donation type
        const donationTypeSelect = document.getElementById('donationType');
        const itemDescription = document.querySelector('textarea[name="ItemDescription"]');
        const quantityInput = document.querySelector('input[name="Quantity"]');
        const unitInput = document.querySelector('input[name="Unit"]');

        donationTypeSelect.addEventListener('change', function () {
            const selectedType = this.value;
            let placeholder = '';
            let quantityPlaceholder = '';
            let unitPlaceholder = '';

            switch (selectedType) {
                case 'Food':
                    placeholder = 'e.g., Canned goods, dry pasta, rice, baby formula, fresh produce...';
                    quantityPlaceholder = 'e.g., 25, 50, 100';
                    unitPlaceholder = 'kg, cans, boxes';
                    break;
                case 'Clothing':
                    placeholder = 'e.g., Winter coats, shoes, blankets, children\'s clothes, underwear...';
                    quantityPlaceholder = 'e.g., 10, 25, 50';
                    unitPlaceholder = 'pieces, pairs, sets';
                    break;
                case 'Medical':
                    placeholder = 'e.g., Bandages, first aid kits, prescription drugs, medical equipment...';
                    quantityPlaceholder = 'e.g., 5, 20, 100';
                    unitPlaceholder = 'kits, pieces, boxes';
                    break;
                case 'Money':
                    placeholder = 'e.g., Financial contribution for emergency relief efforts...';
                    quantityPlaceholder = 'e.g., 50, 100, 500';
                    unitPlaceholder = 'USD, EUR, etc.';
                    break;
                case 'Other':
                    placeholder = 'e.g., Hygiene products, school supplies, building materials...';
                    quantityPlaceholder = 'e.g., 10, 25, 100';
                    unitPlaceholder = 'pieces, sets, kg';
                    break;
                default:
                    placeholder = 'Describe what you\'re donating in detail...';
            }

            if (itemDescription) itemDescription.placeholder = placeholder;
            if (quantityInput) quantityInput.placeholder = quantityPlaceholder;
            if (unitInput) unitInput.placeholder = unitPlaceholder;
        });

        // Auto-format currency for money donations
        donationTypeSelect.addEventListener('change', function () {
            if (this.value === 'Money') {
                quantityInput.type = 'number';
                quantityInput.step = '0.01';
                quantityInput.min = '0.01';
            } else {
                quantityInput.type = 'number';
                quantityInput.step = '1';
                quantityInput.min = '1';
            }
        });

        // Show impact message based on quantity
        quantityInput.addEventListener('input', function () {
            const quantity = parseFloat(this.value);
            const impactMeter = document.querySelector('.impact-meter p');

            if (quantity > 0) {
                let message = 'Every contribution helps us provide essential support to those in need';

                if (quantity >= 100) {
                    message = 'Amazing! This will help an entire community!';
                } else if (quantity >= 50) {
                    message = 'Wonderful! This will support multiple families!';
                } else if (quantity >= 10) {
                    message = 'Great! This will make a real difference!';
                }

                if (impactMeter) {
                    impactMeter.textContent = message;
                }
            }
        });
    </script>
}